# [데이터베이스 설정]
# SQLite 로컬 개발 환경
DATABASE_URL="file:./dev.db"
# 프로덕션에서는 PostgreSQL로 변경 권장
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/construction_db"

# [NextAuth 설정]
# 반드시 설정해야 함: JWT 토큰 생성 및 검증에 필요한 비밀키
NEXTAUTH_SECRET="YOUR_SECRET_KEY_AT_LEAST_32_CHARS_LONG"
# 개발 환경
NEXTAUTH_URL="http://localhost:3000"
# 프로덕션 환경
# NEXTAUTH_URL="https://your-production-domain.com"
NEXT_TELEMETRY_DISABLED=1

# [MinIO 파일 서버 설정]
# MinIO 관리자 계정 정보 - 강력한 비밀번호로 변경 권장
MINIO_ACCESS_KEY="minioadmin" 
MINIO_SECRET_KEY="minioadmin"
# 로컬 개발 환경 설정
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
# Docker 환경에서는 컨테이너 서비스명 사용
# MINIO_ENDPOINT="minio"
MINIO_BUCKET_NAME="construction-files"
MINIO_USE_SSL="false"

# [환경 설정]
# development: 개발 환경
# production: 프로덕션 환경
NODE_ENV="development"

# [이메일 서비스] - 비밀번호 재설정 등에 필요
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM=""

# [초기 관리자 계정] - 시스템 첫 구동 시에만 사용
# 실제 프로덕션에서는 이 계정 생성 후 반드시 환경변수에서 제거
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="StrongAdminPassword123!"

# [리눅스 환경 권한 관리] - Docker 이미지 내에서 사용
# NODE_USER_UID=1000
# NODE_USER_GID=1000
